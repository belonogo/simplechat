#include <QCoreApplication>
#include <QString>
#include <QVector>
#include <QRandomGenerator>
#include <iostream>

QString generateFunnyNickname() {
    QVector<QString> adjectives = {
        "Вонючий", "Смешной", "Злобный", "Веселый", "Медленный", "Сонный", "Быстрый", "Ленивый", "Громкий", "Тихий",
        "Прыгающий", "Пугающий", "Танцующий", "Кричащий", "Шумный", "Загадочный", "Хитрый", "Добрый", "Угрюмый", "Маленький",
        "Большой", "Мохнатый", "Гладкий", "Зеленый", "Синий", "Красный", "Желтый", "Розовый", "Фиолетовый", "Рыжий",
        "Страшный", "Забавный", "Сердитый", "Спящий", "Бодрый", "Уставший", "Потный", "Мокрый", "Сухой", "Пушистый",
        "Колючий", "Грязный", "Чистый", "Скользкий", "Шершавый", "Прекрасный", "Ужасный", "Умный", "Глупый", "Малодушный"
    };

    QVector<QString> nouns = {
        "Горилла", "Кот", "Медведь", "Лев", "Панда", "Крокодил", "Енот", "Тигр", "Бегемот", "Жираф",
        "Слон", "Крыса", "Мышь", "Лиса", "Волк", "Заяц", "Кенгуру", "Коала", "Лама", "Барсук",
        "Белка", "Кабан", "Петух", "Курица", "Гусь", "Утка", "Орел", "Сокол", "Сова", "Дятел",
        "Свинья", "Овца", "Коза", "Лошадь", "Корова", "Буйвол", "Осел", "Верблюд", "Муравей", "Пчела",
        "Жук", "Бабочка", "Стрекоза", "Паук", "Черепаха", "Ящерица", "Крокодил", "Акула", "Дельфин", "Кит"
    };

    QString adjective = adjectives.at(QRandomGenerator::global()->bounded(adjectives.size()));
    QString noun = nouns.at(QRandomGenerator::global()->bounded(nouns.size()));

    return adjective + " " + noun;
}

int main(int argc, char *argv[])
{
    QCoreApplication a(argc, argv);

    QString nickname = generateFunnyNickname();
    std::cout << "Generated nickname: " << nickname.toStdString() << std::endl;

    return a.exec();
}
